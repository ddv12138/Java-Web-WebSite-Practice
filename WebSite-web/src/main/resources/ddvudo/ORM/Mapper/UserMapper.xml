<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ddvudo.ORM.Mapper.UserMapper">
    <resultMap id="userResult" type="ddvudo.ORM.POJO.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="baned" column="baned"/>
        <result property="lock" column="lock"/>
    </resultMap>
    <insert id="saveOne" parameterType="ddvudo.ORM.POJO.User" useGeneratedKeys="true" flushCache="true">
        insert into usertable (name, password, baned, "lock")
        values (#{name}, #{password}, #{baned}, #{lock})
    </insert>
    <delete id="deleteOne" parameterType="ddvudo.ORM.POJO.User">
        delete
        from usertable
        where id = #{id}
    </delete>
    <select id="selectList" resultMap="userResult">
        select *
        from usertable
        order by id
    </select>
    <select id="selectById" resultMap="userResult">
        select *
        from usertable
        where id = #{id}
    </select>
    <select id="selectByName" resultMap="userResult">
        select *
        from usertable
        where name = #{name}
        limit 1
    </select>
    <update id="updateOne">
        update usertable
        <trim prefix="set" suffixOverrides=",">
            <if test="null!=name">name=#{name},</if>
            <if test="null!=baned">baned=#{baned},</if>
            <if test="null!=lock">lock=#{lock},</if>
        </trim>
        where id=#{id}
    </update>
</mapper>